/**
 * Implements hook_ENTITY_TYPE_insert().
 *
 * Flags the default links.
 */
function dgreat_group_group_insert(EntityInterface $entity) {
  if ($entity->hasField('field_default_favorite_links')) {
    $add = (new DgreatGroup($entity))->addDefaultFlag('field_default_favorite_links');
  }
  if ($entity->hasField('field_default_quick_links')) {
    $add = (new DgreatGroup($entity))->addDefaultFlag('field_default_quick_links');
  }
}

