{% set description = paragraph.field_body_text.value %}
	{% if paragraph.field_height.value %}
		{% set height = paragraph.field_height.value %}
	{% else %}
		{% set height = 400 %}
	{% endif %}




{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
   ]
%}
{% set color = paragraph.field_colors['#items'].getString() %}
{{ color }}
<style>
	
	.overlay {
	  position: relative;
	}

	.overlay:before{
	  position: absolute;
	  content:" ";
	  top:0;
	  left:0;
	  width:100%;
	  height:100%;
	  display: none;
	  z-index:0;
	}
	.overlay:hover:before{
	  display: block;
	  background-color: rgba(0,0,0,0.3);
	}
	.box {
		display: flex;
		border:1px solid #919194;
	}
	.box-body {
		-webkit-box-flex: 1;
	    -ms-flex: 1 1 auto;
	    flex: 1 1 auto;
	    padding: 1.25rem;
	    z-index:100;
	    position: relative;
	}
	.box a h2, .box a h3 {
		color:#fff!important;
	}
	.box h2 {
		font-size: 1.2rem;
		font-weight:600;
		line-height:120%;
	}
	.box  h3 {
		font-size: 1rem;
		font-weight:400;
		font-style: italic;
		line-height:150%;
		margin-top: -10px;
	}
	.box p {
		font-size: .8rem;
		font-weight:400;
		line-height:150%;
		color:#2A2A2A;
	}
	.box.blue p, .box.turquoise p, .box.olive p, .box.blue p, .terracotta p, .box.orange p, .box.plum p, .box.tan p, .box.lime p {
		color:#fff;
	}
	.box-image {
		width: 100%;
	}
	.box-link {
		text-decoration:none;
	}
	
	
	.box.blue {
		background: #007EA5;
		border: 0;
	}
	.box.turquoise {
		background: #008575;
		border: 0;
	}
	.box.olive {
		background: #687E31;
		border: 0;
	}
	.box.terracotta {
		background: #B30000;
		border: 0;
	}
	.box.orange {
		background: #C25400;
		border: 0;
	}
	.box.plum {
		background: #8E0F75;
		border: 0;
	}
	.box.tan {
		background: #996E3B;
		border: 0;
	}
	.box.lime {
		background: #008800;
		border: 0;
	}
	

	html, body {
        height: 100%;
        margin: 0px;
    }
    .overlay {
        height: 100%;	
    	border:2px solid red;
    }


</style>

{% block paragraph %}

<div{{ attributes.addClass(classes) }}>

<div class="box {{ paragraph.field_colors.value }} overlay" style="min-height:{{ height }}px;">
	<a class="box-link" href="{{ paragraph.field_link.value }}" target="_blank">
		
		<img class="box-image" alt="Card image cap"src="{{ file_url(paragraph.field_image.entity.uri.value) }}" />
		<div class="box-body"> 
			<div class=""><h2>{{ paragraph.field_heading.value }}</h2></div>
			<div class=" "><h3>{{ paragraph.field_subheading.value }}</h3></div>
			<p class="card-text">
				{% autoescape false %}
          			{{ description }}
        		{% endautoescape %}
        	</p>
		</div>
	</a>
</div>
</div>
{% endblock paragraph %}
